# Slack User OAuth Token (xoxp-...) MUST include scopes:
# - users.profile:write
# - users.profile:read   (required; this project has NO fallback mode)
SLACK_USER_TOKEN=xoxp-REPLACE_ME

# Your API key for calling this service (keep it long & random)
API_KEY=REPLACE_ME_LONG_RANDOM_STRING

PORT=3000

# Optional status templates
STATUS_TEXT_OFFICE=at the office (NOVE)
STATUS_EMOJI_OFFICE=:office:

STATUS_TEXT_HOME=home office
STATUS_EMOJI_HOME=:house_with_garden:

STATUS_TEXT_CUSTOMER=at the customer
STATUS_EMOJI_CUSTOMER=:building_construction:

# P0 status texts (exact match after trim). If Slack status_text equals any of these, automation won't override/clear.
P0_TEXTS=vacation,sick

# If true and you send {"label":"ACME"} on arrive-customer, status_text becomes "客户现场 — ACME"
CUSTOMER_INCLUDE_LABEL=true
